public class Tutorial_disabletutorial extends DialogFragment {

    @Override
    public Dialog onCreateDialog(Bundle savedInstanceState) {
        AlertDialog.Builder builder = new AlertDialog.Builder(getActivity());
        LayoutInflater inflater = getActivity().getLayoutInflater();
        View dialogView = inflater.inflate(R.layout.tutorial, null);

        TextView tutText = (TextView) dialogView.findViewById(R.id.tutText);
        tutText.setText(getString(R.string.disable));

        builder.setView(dialogView);
        builder.setCancelable(true);
        builder.setPositiveButton("GOT IT!", new DialogInterface.OnClickListener() {
            @Override
            public void onClick(DialogInterface dialogInterface, int i) {
                dismiss();
            }
        });
        return builder.create();
    }

}

